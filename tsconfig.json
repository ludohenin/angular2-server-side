{
    "version": "1.6.0",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true
    },
    "files": [
        "bootstrap.ts",
        "di/di.ts",
        "di/user_model.ts",
        "di/user_service.ts",
        "index.ts",
        "tools/typings/tsd/node/node.d.ts",
        "tools/typings/tsd/tsd.d.ts"
    ],
    "filesGlob": [
        "**/*.ts"
    ],
    "compileOnSave": false,
    "exclude": [
        "node_modules/**/*"
    ]
}
